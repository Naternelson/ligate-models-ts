{
  "name": "ligate-models",
  "version": "1.0.0",
  "description": "Models for Firebase Documents for Ligate",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Naternelson/ligate-models-ts.git"
  },
  "keywords": ["Ligate", "Models", "Firebase"],
  "author": "Nathan Nelson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Naternelson/ligate-models-ts/issues"
  },
  "homepage": "https://github.com/Naternelson/ligate-models-ts#readme",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescripte": "^1.0.0"
  }
}
